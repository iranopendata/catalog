{
  "$schema": "http://json-schema.org/schema#",
  "required": [
    "name",
    "resources",
    "title",
    "keywords",
    "license",
    "category",
    "maintainer",
    "author"
  ],
  "definitions": {
    "lang": {
      "type": "string",
      "enum": ["fa", "en"]
    },
    "source": {
      "type": "object",
      "properties": {
        "name": {"$def": "#/definitions/i18n"},
        "web": {
          "type": "string",
          "format": "uri"
        }
      }
    },
    "i18n": {
      "type": "array",
      "minItems": 2,
      "items": {
        "type": "object",
        "properties": {
          "lang": {"$ref": "#/definitions/lang"},
          "text": {
            "type": "string"
          }
        }
      }
    },
    "i18n_array_item": {
      "type": "object",
      "properties": {
        "lang": {"$ref": "#/definitions/lang"},
        "wordlist": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "i18n_array": {
      "type": "array",
      "minItems": 2,
      "items": {"$ref": "#/definitions/i18n_array_item"}
    },
    "id": {
      "type": "string",
      "pattern": "^([a-z0-9._-])+$"
    },
    "resource": {
      "type": "object",
      "required": ["title", "url", "sources", "schema"],
      "properties": {
        "title": {"$ref": "#/definitions/i18n"},
        "url": {
          "type": "string",
          "format": "uri"
        },
        "code": {
          "type": "string",
          "format": "uri"
        },
        "description": {"$ref": "#/definitions/i18n"},
        "sources": {
          "type": "array",
          "minItems": 1,
          "items":  {"$ref": "#/definitions/source"}
        },
        "schema": {
          "type": "object",
          "oneOf": [
            {"$ref": "#/definitions/csv"},
            {"$ref": "#/definitions/other"}
          ]
        }
      }
    },
    "csv": {
      "type": "object",
      "properties": {
        "format": {
          "type": "string",
          "enum": ["csv"]
        },
        "schema": {
          "type": "object",
          "oneOf": [
            {"$ref": "#/definitions/csv"},
            {"$ref": "#/definitions/other"}
          ]
        }
      }
    },
    "other": {
      "type": "object",
      "properties": {
        "format": {
          "type": "string",
          "enum": ["XML", "JSON"]
        }
      }
    }
  },
  "type": "object",
  "properties": {
    "license": {
      "type": "string"
    },
    "category": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "enum": [
          "population",
          "energy",
          "employment",
          "women",
          "economics",
          "banking",
          "budget",
          "housing",
          "transport",
          "trade",
          "health",
          "education",
          "crime",
          "environment",
          "communications",
          "elections" 
        ]
      }
    },
    "keywords": {"$ref": "#/definitions/i18n_array"},
    "created_at": {
      "type": "string",
      "format": "date"
    },
    "updated_at": {
      "type": "string",
      "format": "date"
    },
    "indexed_at": {
      "type": "string",
      "format": "date"
    },
    "period": {
      "type": "array",
      "minItems": 2,
      "maxItems": 2,
      "items": {
        "type": "number"
      }
    },
    "frequency": {
      "type": "string",
      "enum": ["daily", "weekly", "monthly", "quarterly", "yearly"]
    },
    "author": {"$ref": "#/definitions/source"},
    "maintainer": {"$ref": "#/definitions/i18n"},
    "name": {"$ref": "#/definitions/id"},
    "title": {"$ref": "#/definitions/i18n"},
    "description": {"$ref": "#/definitions/i18n"},
    "resources": {
      "type": "array",
      "minItems": 1,
      "items": {"$ref": "#/definitions/resource"}
    }
  }
}
